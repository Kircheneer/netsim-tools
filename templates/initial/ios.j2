hostname {{ inventory_hostname }}
!
no ip domain-lookup
!
lldp run
!
{% if ('ipv6' in loopback) or ('ipv6'|map('extract',links)) %}
ipv6 unicast-routing
!
{% endif %}
interface Loopback0
{% if 'ipv4' in loopback %}
 ip address {{ loopback.ipv4|ipaddr('address') }} {{ loopback.ipv4|ipaddr('netmask') }}
{% endif %}
{% if 'ipv6' in loopback %}
 ipv6 address {{ loopback.ipv6 }}
{% endif %}
!
interface {{ mgmt.ifname|default('GigabitEthernet0/0') }}
 no lldp transmit
 no lldp receive
!
{% for l in links %}
interface {{ l.ifname }}
 no shutdown
{% if l.ipv4 is defined %}
 ip address {{ l.ipv4|ipaddr('address') }} {{ l.ipv4|ipaddr('netmask') }}
{% endif %}
{% if l.ipv6 is defined %}
 ipv6 address {{ l.ipv6 }}
{% endif %}
{% if l.bandwidth is defined %}
 bandwidth {{ l.bandwidth  }}
{% endif %}
!
{% endfor %}
no banner exec
no banner login
no banner incoming
