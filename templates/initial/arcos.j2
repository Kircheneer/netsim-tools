system hostname {{ inventory_hostname }}
!
!
interface loopback0
 enable true
 subinterface 0
   {% if 'ipv4' in loopback %}
   ipv4 address {{ loopback.ipv4.split('/')[0] }} prefix-length 32
   {% endif %}
   {% if 'ipv6' in loopback %}
   ipv6 address {{ loopback.ipv6.split('/')[0] }} prefix-length 64
   {% endif %}
!
!
!
{% for l in links %}
interface {{ l.ifname }}
 enable true
 subinterface 0
   {% if 'ipv4' in l %}
   ipv4 address {{ l.ipv4.split('/')[0] }} prefix-length {{ l.ipv4.split('/')[1] }}
   {% endif %}
   {% if 'ipv6' in l %}
   ipv6 address {{ l.ipv6.split('/')[0] }} prefix-length {{ l.ipv6.split('/')[1] }}
   {% endif %}
!
{% endfor %}
